# .env.example - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# Database Configuration
DB_NAME=fibonacci
DB_USER=fibonacci_user
DB_PASSWORD=your-secure-password-here
DB_HOST=postgres  # Use 'postgres' for Docker, 'localhost' for local dev
DB_PORT=5432

# Django Configuration
SECRET_KEY=your-django-secret-key-here-generate-a-new-one
DEBUG=False  # Set to True only for development
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Microservice URLs (for Docker/Kubernetes)
ANALYTICS_SERVICE_URL=http://analytics-service:8001
PORTFOLIO_SERVICE_URL=http://portfolio-service:8002

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://yourdomain.com

# External API Keys (optional)
COINGECKO_API_KEY=  # Optional: CoinGecko Pro API key for higher rate limits

# For Local Development (without Docker)
# DB_HOST=localhost
# ANALYTICS_SERVICE_URL=http://127.0.0.1:8001
# PORTFOLIO_SERVICE_URL=http://127.0.0.1:8002
